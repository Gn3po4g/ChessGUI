<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ChessGUI.ViewModels"
             xmlns:local="using:ChessGUI"
						 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ChessGUI.Views.Mark"
						 x:DataType="vm:MarkViewModel"
						 Width="{x:Static local:Constant.PIECE_SIZE}"
						 Height="{x:Static local:Constant.PIECE_SIZE}"
						 IsVisible="{Binding Show}">
