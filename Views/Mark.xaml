<UserControl x:Class="ChessGUI.Views.Mark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:m="clr-namespace:ChessGUI.Models"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             d:DataContext="{d:DesignInstance Type=m:Chess}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <hc:Object2VisibilityConverter x:Key="Obj2Vis"/>
    </UserControl.Resources>
    <Border Background="{StaticResource Mark}"
            Width="{x:Static m:Piece.PieceSize}"
            Height="{x:Static m:Piece.PieceSize}"
            Visibility="{Binding Converter={StaticResource Obj2Vis}}"/>
</UserControl>